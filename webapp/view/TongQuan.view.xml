<mvc:View
    controllerName="base.controller.TongQuan"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    >
    <Page title="{i18n>TextTitle}" showNavButton="true"
		navButtonPress=".onNavBack">
        <content>
            <VBox>
                <Text text="Xin chào hãy bắt đầu với {i18n>TextTitle}" />
            </VBox>
        </content>
    </Page>
</mvc:View>

