            <Link text="Link hướng dẫn" href="https://sapui5.hana.ondemand.com/#/topic/bcdbde6911bd4fc68fd435cf8e306ed0" target="_blank" class="sapUiMediumMargin sapMTextBold" />
            <Link text="{i18n>TextTitle}" press=".onNavToDetail" class="sapUiMediumMargin sapMTextBold" />
            <Link text="{i18n>TextStep01}" press=".onNavToDetail1" class="sapUiMediumMargin sapMTextBold" />
            <Link text="{i18n>TextStep02}" press=".onNavToDetail2" class="sapUiMediumMargin sapMTextBold" />
            <Link text="{i18n>TextStep03}" press=".onNavToDetail3" class="sapUiMediumMargin sapMTextBold" />
